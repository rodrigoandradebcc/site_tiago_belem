
<div class="container">
  <div class="row">
    <div class="span12">
      <div id="fundo_dois">
      <h1 align="center">√Ålbums</h1>
    </div>
    <hr size=3 width=1170>
      <div class="row">
        <%for i in (0...@albums.count).step(2) %>
        <div class="span6">
          <%= link_to raw(@albums[i].name), album_path(@albums[i].id) %>
          <% @albums[i].photos.find(:first) do |foto| %>
            <%= image_tag foto.image_url(:thumb).to_s%>
          <% end %>
        </div>
        <div class="span6">
          <% if i < (@albums.count-1) %>
          <%= raw(@albums[i+1].name) %>
          <% end %>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
