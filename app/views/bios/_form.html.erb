<div class="container">
  <%= form_for @bio, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, :class => 'text_area' %>
    </div>
  </div>

  <div class="span12">
    <%= f.submit nil, :class => 'btn btn-inverse' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
    bios_path, :class => 'btn btn-danger' %>
  </div>
  <% end %>
</div>