<div class="row-fluid">
    <div class="span4">
      <img src="../assets/tiago13.JPG">
    </div>
    <div class="span8">
        <%- model_class = Contact -%>
    <div class="page-header">
      <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    </div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><i class="icon-facebook-sign"> <%=model_class.human_attribute_name(:facebook) %></th>
      <th><%= model_class.human_attribute_name(:cell_phone) %></th>
      <% if @contacts.first %>
      <%= @contacts.first.facebook %>
      <% end %>
      <th><%= model_class.human_attribute_name(:email) %></th>
      
      <th><%= model_class.human_attribute_name(:location) %></th>
      http://fortawesome.github.io/Font-Awesome/icon/twitter-sign/
      <th><%= model_class.human_attribute_name(:twitter) %></th>
      <i class="icon-youtube-sign"></i>
      <th><%= model_class.human_attribute_name(:youtube) %></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.facebook %></td>
        <td><%= contact.cell_phone %></td>
        <td><%= contact.email %></td>
        <td><%= contact.location %></td>
        <td><%= contact.twitter %></td>
        <td><%= contact.youtube %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_contact_path(contact), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      contact_path(contact),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_contact_path,
            :class => 'btn btn-inverse' %>

    </div>
</div>
