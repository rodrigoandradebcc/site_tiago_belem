
<div class="container">
  <div class="row-fluid">
    <div id="fundo_aplicar_dois" class="span4" >
      <img src="../assets/t7.jpg" style="padding-top:0px;">
    </div>
    <div class="span8">
      <%- model_class = Schedule -%>
      <div class="page-header">
        <div id="fundo_dois">
          <div id="rodape">
        <h1>Eventos</h1>
      </div>
      </div>
      </div>
      <table class="table">
        <thead>
          <tr>      
            <th><%= model_class.human_attribute_name(:date_event) %></th>
            <th><%= model_class.human_attribute_name(:specification_event) %></th>
          </tr>
        </thead>
        <tbody>
          <% @schedules.each do |schedule| %>
          <tr>
            <td><%= schedule.date_event.strftime('%d/%m/%Y') %></td>
            <td><%= schedule.specification_event %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_schedule_path(schedule), :class => 'btn btn-mini' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              schedule_path(schedule),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      
    </div>
  </div>
</div>